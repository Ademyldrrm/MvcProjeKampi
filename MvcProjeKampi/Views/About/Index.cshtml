@using EntityLayer.Concrete
@model List<About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2> Hakkımda veri Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Hakkımmda Başlığı</th>
        <th>Aktif Yap</th>
        <th>Pasif Yap</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutID</td>
            <td>@item.AboutDetail1</td>
            <td><a href="" class="btn btn-warning">Aktif Yap</a></td>
            <td><a href="" class="btn btn-danger">Pasif Yap</a></td>
           
        </tr>
    }
</table>
﻿<button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">Hakkımızda Yazı Girişi</button>

@Html.Action("AboutAddPartial","About")

